<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
android:layout_width="match_parent"
android:orientation="vertical"
android:background="#c8ffffff">


    <LinearLayout
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
               >
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="#FFFCD1"
                    android:baselineAligned="false"
                    android:touchscreenBlocksFocus="false">

                    <TextView
                        android:id="@+id/objetd_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/objetmajuscule"
                        android:textColor="#8C7614"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/messages_textview"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/black"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/messaged_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#8C7614"
                        android:text="@string/messagemauscule"
                        android:textStyle="bold" />

                    <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                        android:id="@+id/load_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/black"
                        android:autoLink="all"
                        android:clickable="true"
                        android:textIsSelectable="true"
                        android:layout_marginBottom="6dp"

                        />

                    <TextView
                        android:id="@+id/detail_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#8C7614"
                        android:text="@string/detail"
                        android:textStyle="bold"
                        android:visibility="gone"
                         />

                    <TextView
                        android:id="@+id/url_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:text="url"
                        android:textColor="#009688"
                        android:focusable="true"
                        android:clickable="true"
                        android:visibility="gone"
                        android:textStyle="normal|italic"
                        android:layout_marginBottom="6dp"/>


                    <ImageView
                        android:id="@+id/fichier_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/fichier_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#FF8B7B55"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:textStyle="italic"
                        android:visibility="gone"/>

                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_gravity="top"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="#EDE9C0"
                    android:layout_marginBottom="6dp">

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:id="@+id/date_info_detail_textview"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:layout_marginRight="10dp"
                            />

                        <TextView
                            android:id="@+id/supprimer_information_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:text="@string/supprimer_detail"
                            android:textColor="#FF8B7B55"
                            android:focusable="true"
                            android:layout_gravity="right"
                            android:gravity="center_vertical"
                            android:clickable="true"
                            />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/commentaires_label_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#727272"
            android:text="@string/commentaires"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
